{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "description": "A professional or learning project.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the project."
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of technologies used in the project."
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "A link to the live project."
    },
    "githubUrl": {
      "type": "string",
      "format": "uri",
      "description": "A link to the project's GitHub repository."
    }
  },
  "required": ["name", "url"]
}
